     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      CO2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [];

internalField   uniform 0;

boundaryField
{
    farfield
    {
        type            codedFixedValue;
        value           $internalField;
        name            massTransferCO2;
        
        #include "../settings"
        code
        #{
            const scalar K_ext = $K_ext; // External mass transfer coefficient [m/s]
            const scalar D_CO2_l = $D_CO2_l; // Diffusion coefficient of CO2 in liquid phase [m²/s]
            const scalar C_CO2_g = $C_CO2_g; // Saturation concentration of CO2 in liquid phase
            const scalar H_cc = $H_cc; // Henry's law constant for CO2 [mol/(m³·Pa)]

            const volScalarField& CO2 = this->db().lookupObject<volScalarField>("CO2");

            Info << "Applying mass transfer boundary condition for CO2 on patch: " << patch().name() << endl;

            scalarField& patchField = *this;
            forAll(patchField, faceI)
            {
                label cellI = patch().faceCells()[faceI];

                scalar cellValue = CO2[cellI];
                scalar C_CO2_grad = K_ext/D_CO2_l * (C_CO2_g - patchField[faceI]/H_cc);

                patchField[faceI] = cellValue + C_CO2_grad / (patch().deltaCoeffs()[faceI]);
            }
        #};
    }
    lower_inner
    {
        type            fixedValue;
        value           uniform 0;
    }
    upper_inner
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    "wedge.*"
    {
        type            wedge;
    }
}


// ************************************************************************* //
