FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0]; // [temperature]

internalField   uniform 298;

boundaryField
{
    farfield
    {
        type            fixedValue;
        value           $internalField;
    }
    lower_inner
    {
        type            fixedValue;
        value           $internalField;
    }
    upper_inner
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    "wedge.*"
    {
        type            wedge;
    }

}


