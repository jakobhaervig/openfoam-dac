FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      S;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../settings"

dimensions      [];

internalField   uniform $C_S;

boundaryField
{
    farfield
    {
        type            zeroGradient;
        value           $internalField;
    }
    lower_inner
    {
        type            fixedValue;
        value           $internalField;
    }
    upper_inner
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    "wedge.*"
    {
        type            wedge;
    }
}


